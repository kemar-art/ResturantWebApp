@page
@model ResturantWebApp.Pages.Categories.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6  text-end">
            <h2 class="text-primary">
                <a asp-page="create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i></i>&nbsp;</i> Create New Category
                </a>
            </h2>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr class="text-center">
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Category)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.DisplayOrder</td>
                    <td>
                        <div class=" btn-group" role="group" style="width: 100%">
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="Delete" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
