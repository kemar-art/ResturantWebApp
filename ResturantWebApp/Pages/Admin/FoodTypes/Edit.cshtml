@page
@model ResturantWebApp.Pages.Admin.FoodTypes.EditModel

<form method="post">
    <input hidden asp-for="FoodType.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Food Type</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="FoodType.Name"></label>
            <input asp-for="@Model.FoodType.Name" class="form-control" />
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success" style="width:153px;">Update</button>&nbsp;&nbsp;
        <a asp-page="Index" class="btn btn-primary" style="width:153px;">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}