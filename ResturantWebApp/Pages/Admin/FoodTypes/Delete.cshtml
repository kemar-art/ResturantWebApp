@page
@model ResturantWebApp.Pages.Admin.FoodTypes.DeleteModel

<form method="post">
    <input hidden asp-for="FoodType.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Food Type</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FoodType.Name"></label>
            <input asp-for="@Model.FoodType.Name" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-success" style="width:150px;">Delete</button>&nbsp;&nbsp;
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}