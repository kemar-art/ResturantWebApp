@page
@model RegisterModel
@using ResturantWebApp.Utility
@{
    ViewData["Title"] = "Register";
}



<div class="container min-vh-100 d-flex justify-content-center align-item-center">
    <div class="col-8">
        <section>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @if (User.IsInRole(StaticDetail.ManagerRole))
                {
                    <h1 class="text-center">Register Employee</h1>
                }
                else
                {
                    <div class="text-center">

                        <h1>@ViewData["Title"], </h1>  <h2>by creating a new account.</h2>
                    </div>

                }
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                            <label class="form-label" asp-for="Input.FirstName"></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-outline">
                            <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="" />
                            <label class="form-label" asp-for="Input.LastName"></label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="" />
                    <label asp-for="Input.PhoneNumber"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                @if (User.IsInRole(StaticDetail.ManagerRole))
                {
                    <div class="d-flex justify-content-center">
                        <div class="form-check">
                            <input type="radio" name="UserRole" required value="@StaticDetail.ManagerRole" /> @StaticDetail.ManagerRole

                        </div>
                        <div class="form-check">
                            <input type="radio" name="UserRole" required value="@StaticDetail.KitchenRole" /> @StaticDetail.KitchenRole

                        </div>
                        <div class="form-check">
                            <input type="radio" name="UserRole" required value="@StaticDetail.FrontDeskRole" />  @StaticDetail.FrontDeskRole

                        </div>
                    </div>
                    <span id="msg"></span>
                }

                <button id="registerSubmit" type="submit" class="w-100 btn  btn-primary">Register</button>
            </form>
        </section>
       
    </div>
</div>
